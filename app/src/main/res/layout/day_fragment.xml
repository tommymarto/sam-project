<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".ui.DayFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:background="#FF555555">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewMon"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/day_letter_background"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="multiply"
                    android:text="M"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewMon"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewTue"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/day_letter_background"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="multiply"
                    android:text="T"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewTue"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTue" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewWed"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/day_letter_background"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="multiply"
                    android:text="W"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewWed"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewWed" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewThu"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/day_letter_background"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="multiply"
                    android:text="T"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewThu"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewThu" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewFri"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/day_letter_background"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="multiply"
                    android:text="F"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewFri"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFri" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewSat"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/day_letter_background"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="multiply"
                    android:text="S"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewSat"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewSat" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewSun"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/day_letter_background"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="multiply"
                    android:text="S"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewSun"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewSun" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <com.db.williamchart.view.DonutChartView
            android:id="@+id/chartDaySteps"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" >

            <ImageView
                android:id="@+id/chartDayStepsArrowRight"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:src="@drawable/arrow_right" />
        </com.db.williamchart.view.DonutChartView>

        <com.db.williamchart.view.DonutChartView
            android:id="@+id/chartDayExercise"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="43.5dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" >

            <ImageView
                android:id="@+id/chartDayExerciseArrowDoubleRight"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:src="@drawable/arrow_double_right" />
        </com.db.williamchart.view.DonutChartView>

        <com.db.williamchart.view.DonutChartView
            android:id="@+id/chartDaySth"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="71dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" >

            <ImageView
                android:id="@+id/chartDaySthArrowDoubleUp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:src="@drawable/arrow_up" />
        </com.db.williamchart.view.DonutChartView>

        <com.db.williamchart.view.BarChartView
            android:id="@+id/chartDayDetails"
            android:layout_width="394dp"
            android:layout_height="102dp"
            android:layout_marginTop="44dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chartDaySteps" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="136dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:text="Movement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chartDaySteps" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="379dp"
            android:layout_height="115dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chartDayDetails"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>