<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginTop="4dp"
    android:paddingHorizontal="16px"
    android:layoutDirection="ltr"
    tools:context=".ui.WeekFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewMon"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/day_letter_background"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:text="M"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewMon"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewTue"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/day_letter_background"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:text="T"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewTue"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTue" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewWed"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/day_letter_background"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:text="W"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewWed"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewWed" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewThu"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/day_letter_background"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:text="T"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewThu"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewThu" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewFri"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/day_letter_background"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:text="F"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewFri"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewFri" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewSat"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/day_letter_background"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:text="S"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewSat"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSat" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewSun"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/day_letter_background"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:text="S"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewSun"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
